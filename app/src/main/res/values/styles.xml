<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">#202030</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/splashColor</item>
        <item name="colorAccent">#1976D2</item>
        <item name="android:navigationBarColor">#202030</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">#202030</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:timePickerDialogTheme">@style/TimePickerDialog</item>
        <item name="android:fontFamily">@font/dmsans_medium</item>
        <item name="android:textColor">#E0E0E0</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:colorControlHighlight">#3399ff</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
        <item name="alertDialogStyle">@style/AppCompatAlertDialogStyle</item>
        <item name="android:textColorHint">#9E9E9E</item>
        <item name="colorControlNormal">#E0E0E0</item>
        <item name="colorControlActivated">#1E88E5</item>
        <item name="colorControlHighlight">#FFFFFF</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorAccent">#2196f3</item>
        <item name="android:navigationBarColor">#FFFFFF</item>
        <item name="android:statusBarColor">#FFFFFF</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColorPrimary">#424242</item>
        <item name="android:popupMenuStyle">@style/PopupMenuLight</item>
        <item name="android:timePickerDialogTheme">@style/TimePickerDialogLight</item>
        <item name="android:fontFamily">@font/dmsans_medium</item>
        <item name="android:textColor">#424242</item>
        <item name="android:colorControlHighlight">#3399ff</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
        <item name="alertDialogStyle">@style/AppCompatAlertDialogStyle</item>
        <item name="android:textColorHint">#757575</item>
        <item name="colorControlNormal">#2e7d32</item>
        <item name="colorControlActivated">#1976D2</item>
        <item name="colorControlHighlight">#FFFFFF</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogThemeLight</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="AppTheme.BrandedLaunch" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/branded_launch</item>
        <item name="android:statusBarColor">@color/statusBarSplashColor</item>
        <item name="android:navigationBarColor">@color/navbarSplashColor</item>
    </style>

    <style name="checkBoxStyleLight" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#2e7d32</item>
        <item name="android:textColorSecondary">#1976D2</item>
    </style>

    <style name="AppBottomSheetDialogThemeLight" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyleLight</item>
    </style>

    <style name="AppModalStyleLight" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_corner_light</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_corner</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_radius</item>
        <item name="android:background">@drawable/popup_radius</item>
    </style>

    <style name="PopupMenuLight" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_radius_light</item>
        <item name="android:background">@drawable/popup_radius_light</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:backgroundTint">@color/mainLayoutColor</item>
        <item name="android:fontFamily">@font/dmsans_medium</item>
        <item name="android:topLeftRadius">3pt</item>
        <item name="android:topRightRadius">3pt</item>
        <item name="android:bottomLeftRadius">3pt</item>
        <item name="android:bottomRightRadius">3pt</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
        <item name="android:textColor">@color/titleAlertDialogColor</item>
        <item name="android:textSize">18.5sp</item>
    </style>

    <style name="RadioGroupAlertDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:backgroundTint">@color/mainLayoutColor</item>
        <item name="android:fontFamily">@font/dmsans_medium</item>
        <item name="android:topLeftRadius">3pt</item>
        <item name="android:topRightRadius">3pt</item>
        <item name="android:bottomLeftRadius">3pt</item>
        <item name="android:bottomRightRadius">3pt</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
        <item name="android:textColor">@color/titleAlertDialogColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TimePickerDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:backgroundTint">#202030</item>
        <item name="android:textColorPrimary">#E0E0E0</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:timePickerStyle">@style/TimePickerStyle</item>
    </style>

    <style name="TimePickerDialogLight" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:textColorPrimary">#E0E0E0</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:timePickerStyle">@style/TimePickerStyleLight</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#b30000</item>
        <item name="android:textSize">14.5sp</item>
    </style>

    <style name="NegativeButtonStyleLight" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#cc0000</item>
        <item name="android:textSize">14.5sp</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#81C784</item>
        <item name="android:textSize">14.5sp</item>
    </style>

    <style name="PositiveButtonStyleLight" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#2e7d32</item>
        <item name="android:textSize">14.5sp</item>
    </style>

    <style name="NeutralButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textSize">14.5sp</item>
    </style>

    <style name="TimePickerStyle" parent="android:Widget.Material.TimePicker">
        <item name="android:timePickerMode">clock</item>
        <item name="android:headerBackground">#202030</item>
        <item name="android:amPmBackgroundColor">#202030</item>
        <item name="android:numbersBackgroundColor">#202030</item>
        <item name="android:numbersInnerTextColor">#D9D9D9</item>
        <item name="alertDialogStyle">@style/AppCompatAlertDialogStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:numbersTextColor">#E0E0E0</item>
        <item name="android:numbersSelectorColor">#1E88E5</item>
        <item name="android:textColorSecondary">#E0E0E0</item>
        <item name="android:textColorPrimary">#E0E0E0</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="TimePickerStyleLight" parent="android:Widget.Material.TimePicker">
        <item name="android:timePickerMode">clock</item>
        <item name="android:headerBackground">#FFFFFF</item>
        <item name="android:amPmBackgroundColor">#FFFFFF</item>
        <item name="android:numbersBackgroundColor">#FFFFFF</item>
        <item name="android:numbersInnerTextColor">#292929</item>
        <item name="android:numbersTextColor">#212121</item>
        <item name="android:numbersSelectorColor">#1E88E5</item>
        <item name="android:textColorSecondary">#212121</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="SwitchOffTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:trackTint">#FFFFFF</item>
        <item name="android:thumbTint">#FFFFFF</item>
    </style>

    <style name="SwitchOnTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:trackTint">#d37a7a</item>
        <item name="android:thumbTint">#d37a7a</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:topLeftRadius">3pt</item>
        <item name="android:topRightRadius">3pt</item>
        <item name="android:bottomLeftRadius">3pt</item>
        <item name="android:bottomRightRadius">3pt</item>
    </style>
</resources>
