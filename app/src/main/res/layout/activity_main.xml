<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:background="#202030"
        tools:context=".MainActivity">
    <android.support.design.widget.FloatingActionButton
            android:id="@+id/done_fab"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_gravity="bottom|end"
            android:backgroundTint="#3399ff"
            android:layout_margin="12pt"
            app:srcCompat="@drawable/ic_done_icon"/>
    <View
            android:id="@+id/dummy"
            android:layout_width="1dp"
            android:layout_height="18dp"
            app:layout_anchor="@id/done_fab"
            app:layout_anchorGravity="top|right|end" />
    <android.support.design.widget.FloatingActionButton
            android:id="@+id/delete_fab"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_gravity="top|end"
            android:backgroundTint="#CC0000"
            android:layout_marginEnd="12pt"
            app:layout_anchor="@id/dummy"
            app:layout_anchorGravity="top|right|end"
            app:srcCompat="@drawable/ic_delete_icon"
            app:backgroundTint="#cc0000"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">

    <GridLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:id="@+id/gridLayout">
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:backgroundTint="#d37a7a"
                android:textColorHint="#d9d9d9"
                android:layout_marginTop="35dp"
                android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:textColor="#FFFFFF"
                    android:hint="@string/note_title"
                    android:backgroundTint="#d37a7a"
                    android:fontFamily="@font/product_sans_regular"
                    android:layout_marginStart="15dp"
                    android:id="@+id/title_editText"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:backgroundTint="#d37a7a"
                android:textColorHint="#d9d9d9"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:textColor="#FFFFFF"
                    android:hint="@string/note_content"
                    android:backgroundTint="#d37a7a"
                    android:fontFamily="@font/product_sans_regular"
                    android:id="@+id/content_editText"/>

        </android.support.design.widget.TextInputLayout>
        <Switch
                android:text="@string/persistent_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="15dp"
                android:textColor="#ffffff"
                android:layout_marginTop="25dp"
                android:switchPadding="30dp"
                android:textSize="17sp"
                android:track="@drawable/switch_track"
                android:thumb="@drawable/switch_thumb"
                android:fontFamily="@font/product_sans_regular"
                android:id="@+id/persistent_notfication_switch"/>
        <Switch
                android:text="@string/lockscreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="15dp"
                android:textColor="#ffffff"
                android:layout_marginTop="25dp"
                android:switchPadding="30dp"
                android:textSize="17sp"
                android:thumb="@drawable/switch_thumb"
                android:track="@drawable/switch_track"
                android:fontFamily="@font/product_sans_regular"
                android:id="@+id/autodelete_notification_switch"/>
        <TextView
                android:text="@string/developer"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:fontFamily="@font/product_sans_bold"
                android:layout_gravity="center"
                android:layout_marginTop="150dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="@string/nameDeveloper"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:fontFamily="@font/product_sans_regular"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="@string/openSource"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:fontFamily="@font/product_sans_bold"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:fontFamily="@font/product_sans_regular"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gitHub_link_textView"/>
    </GridLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>